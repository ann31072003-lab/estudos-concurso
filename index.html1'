<script>
    const checkboxes = document.querySelectorAll('.study-item');
    const progressBar = document.getElementById('progress-bar');
    const statsText = document.getElementById('stats');

    function updateProgress() {
        const total = checkboxes.length;
        const checked = document.querySelectorAll('.study-item:checked').length;
        const percentage = Math.round((checked / total) * 100);
        
        progressBar.style.width = percentage + '%';
        statsText.innerText = `Conclu√≠do: ${percentage}% (${checked} de ${total} t√≥picos)`;
    }

    checkboxes.forEach((cb, index) => {
        // Criar um ID √∫nico baseado no √≠ndice se n√£o houver
        const id = 'task-' + index;
        cb.id = id;

        // Carregar estado salvo
        const saved = localStorage.getItem(id);
        if (saved === 'true') cb.checked = true;

        // Salvar ao clicar
        cb.addEventListener('change', () => {
            localStorage.setItem(id, cb.checked);
            updateProgress();
        });
    });

    // Inicializar progresso
    updateProgress();
</script>

